<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="successpageVM" type="com.collagepoem.app.modules.successpage.data.viewmodel.SuccesspageVM"/>
    </data>
    <FrameLayout android:id="@+id/frameSuccesspage"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylegray_200">
        <FrameLayout android:id="@+id/frameStackbackground"
            android:layout_gravity="center"
            android:layout_height="@dimen/_914pxv"
            android:layout_marginStart="@dimen/_1pxh" android:layout_width="@dimen/_410pxh">

            <ImageView
                android:id="@+id/imageBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:scaleType="fitXY"
                android:src="@drawable/img_background_914x410"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_background_914x410" />

            <LinearLayout
                android:id="@+id/linearRowshare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginStart="@dimen/_56pxh"
                android:layout_marginTop="@dimen/_70pxv"
                android:layout_marginEnd="@dimen/_56pxh"
                android:layout_marginBottom="@dimen/_70pxv"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageShare"
                    android:layout_width="@dimen/_26pxh"
                    android:layout_height="@dimen/_26pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_share"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_share" />

                <ImageView
                    android:id="@+id/imageSplitline"
                    android:layout_width="@dimen/_1pxh"
                    android:layout_height="@dimen/_31pxh"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_splitline"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_splitline" />

                <ImageView
                    android:id="@+id/imageWechat"
                    android:layout_width="@dimen/_33pxh"
                    android:layout_height="@dimen/_29pxh"
                    android:layout_marginStart="@dimen/_28pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_wechat"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_wechat" />

                <ImageView
                    android:id="@+id/imageMoment"
                    android:layout_width="@dimen/_28pxh"
                    android:layout_height="@dimen/_28pxh"
                    android:layout_marginStart="@dimen/_19pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_moment"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_moment" />

                <ImageView
                    android:id="@+id/imageWeibo"
                    android:layout_width="@dimen/_32pxh"
                    android:layout_height="@dimen/_28pxh"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_weibo"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_weibo" />

                <ImageView
                    android:id="@+id/imageQq"
                    android:layout_width="@dimen/_22pxh"
                    android:layout_height="@dimen/_27pxh"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_qq"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_qq" />

                <ImageView
                    android:id="@+id/imageDownload"
                    android:layout_width="@dimen/_26pxh"
                    android:layout_height="@dimen/_26pxh"
                    android:layout_marginStart="@dimen/_18pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_marginBottom="@dimen/_4pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_download"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_download" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameImagePoem"
                android:layout_width="wrap_content"
                android:layout_height="566dp">

                <ImageView
                    android:id="@+id/imagePoem"
                    imageRes="@{@drawable/img_poem}"
                    android:layout_width="370dp"
                    android:layout_height="377dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginTop="@dimen/_78pxv"
                    android:layout_marginBottom="@dimen/_78pxv"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_poem" />
            </FrameLayout>

        </FrameLayout>

        <LinearLayout android:id="@+id/linearColumnbackbtn"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_70pxv"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_70pxv"
            android:layout_width="match_parent" android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar android:gravity="start"
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" app:contentInsetStart="0dp">
                <LinearLayout android:id="@+id/linearRowbackbtn"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageBackbtn"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_width="@dimen/_20pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_backbtn"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_backbtn"/>
                    <ImageView android:id="@+id/imageClose"
                        android:layout_height="@dimen/_16pxh"
                        android:layout_marginBottom="@dimen/_3pxv"
                        android:layout_marginStart="@dimen/_331pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_width="@dimen/_16pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_close"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_close"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

<!--            <TextView-->
<!--                android:id="@+id/txtDescription"-->
<!--                style="@style/txtArialmt24"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="138dp"-->
<!--                android:layout_marginStart="@dimen/_42pxh"-->
<!--                android:layout_marginTop="@dimen/_463pxv"-->
<!--                android:layout_marginEnd="@dimen/_37pxh"-->
<!--                android:gravity="bottom|center_horizontal"-->
<!--                android:text="@{successpageVM.successpageModel.txtDescription}"-->
<!--                tools:text="@string/msg_congratulations" />-->

            <TextView
                android:id="@+id/txtArialmt24"
                style="@style/txtArialmt24"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_marginStart="@dimen/_42pxh"
                android:layout_marginTop="@dimen/_463pxv"
                android:layout_marginEnd="@dimen/_37pxh"
                android:gravity="bottom|center_horizontal"
                android:singleLine="false"
                android:text="恭喜你！\n完成了一份拼贴诗，\n快和大家分享你的作品吧！" />

        </LinearLayout>

    </FrameLayout>
</layout>
