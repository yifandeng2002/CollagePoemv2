<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="canvasPoemVM" type="com.collagepoem.app.modules.canvaspoem.data.viewmodel.CanvasPoemVM"/>
    </data>

    <FrameLayout
        android:id="@+id/frameStackbackground"
        style="@style/groupStylegray_200"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearColumncard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_60pxv"
            android:layout_marginBottom="@dimen/_60pxv"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/scrollViewScrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80px"
                android:layout_weight="0"
                android:clipToPadding="false"
                android:gravity="start"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frameStackfinish"
                    android:layout_width="match_parent"
                    android:layout_height="1708dp">

                    <FrameLayout
                        android:id="@+id/frameStackcard"
                        android:layout_width="@dimen/_243pxh"
                        android:layout_height="@dimen/_604pxv"
                        android:layout_gravity="top|start"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_marginBottom="@dimen/_10pxv">

                        <ImageView
                            android:id="@+id/imageCard"
                            imageRes="@{@drawable/img_card}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:scaleType="fitXY"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_card" />

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/linearColumnwihtepic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/frameStackwihtepicOne"
                            android:layout_width="match_parent"
                            android:layout_height="1324dp"
                            android:layout_gravity="start">

                            <FrameLayout
                                android:id="@+id/frameStackwihtepic"
                                android:layout_width="@dimen/_335pxh"
                                android:layout_height="@dimen/_482pxv"
                                android:layout_gravity="top|end"
                                android:layout_marginStart="@dimen/_10pxh"
                                android:layout_marginBottom="@dimen/_10pxv">

                                <ImageView
                                    android:id="@+id/imageSwitchbtn"
                                    android:layout_width="@dimen/_43pxh"
                                    android:layout_height="@dimen/_32pxh"
                                    android:layout_gravity="bottom|start"
                                    android:layout_marginStart="@dimen/_109pxh"
                                    android:layout_marginTop="@dimen/_142pxv"
                                    android:layout_marginEnd="@dimen/_109pxh"
                                    android:layout_marginBottom="@dimen/_142pxv"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_switchbtn"
                                    tools:ignore="ContentDescription"
                                    tools:src="@drawable/img_switchbtn" />

                                <ImageView
                                    android:id="@+id/imageBackground"
                                    android:layout_width="@dimen/_410pxh"
                                    android:layout_height="1828dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_1pxh"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_background"
                                    tools:ignore="ContentDescription"
                                    tools:src="@drawable/img_background" />
                            </FrameLayout>

                            <ImageView
                                android:id="@+id/imageWihtepicOne"
                                imageRes="@{@drawable/img_wihtepic_512x159}"
                                android:layout_width="@dimen/_159pxh"
                                android:layout_height="@dimen/_512pxh"
                                android:layout_gravity="start"
                                android:layout_marginTop="@dimen/_339pxv"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:layout_marginBottom="@dimen/_339pxv"
                                android:scaleType="fitXY"
                                tools:ignore="ContentDescription"
                                tools:src="@drawable/img_wihtepic_512x159" />

                            <ImageView
                                android:id="@+id/imageCanvas"
                                imageRes="@{@drawable/img_wihtepic}"
                                android:layout_width="357dp"
                                android:layout_height="1700px"
                                android:layout_gravity="bottom|start"
                                android:layout_marginStart="70px"
                                android:scaleType="fitXY"
                                tools:ignore="ContentDescription"
                                tools:src="@drawable/img_wihtepic" />
                        </FrameLayout>

                        <ImageView
                            android:id="@+id/imageFinish"
                            android:layout_width="@dimen/_171pxh"
                            android:layout_height="@dimen/_46pxh"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_103pxh"
                            android:layout_marginTop="@dimen/_61pxv"
                            android:layout_marginEnd="@dimen/_103pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_finish"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_finish" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/framePoem"
                        android:layout_width="1000px"
                        android:layout_height="1700px"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="@dimen/_27pxh"
                        android:layout_marginTop="@dimen/_41pxv"
                        android:layout_marginEnd="@dimen/_27pxh"
                        android:layout_marginBottom="@dimen/_41pxv">

                        <ImageView
                            android:id="@+id/imagePoemcard"
                            imageRes="@{@drawable/img_poemcard}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:layout_marginStart="-10px"
                            android:layout_marginEnd="20px"
                            android:scaleType="fitXY"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_poemcard" />

                        <LinearLayout
                            android:id="@+id/linearColumntimecn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:layout_marginStart="@dimen/_38pxh"
                            android:layout_marginTop="@dimen/_35pxv"
                            android:layout_marginEnd="@dimen/_38pxh"
                            android:layout_marginBottom="@dimen/_35pxv"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTimeCN"
                                style="@style/txtArialmt10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="@dimen/_118pxh"
                                android:layout_marginEnd="@dimen/_114pxh"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@{canvasPoemVM.canvasPoemModel.txtTimeCN}"
                                tools:text="@string/lbl_2022_1_3" />

                            <TextView
                                android:id="@+id/txtOrder"
                                style="@style/txtHiraginoMinchoProhiraminprow340"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_1pxh"
                                android:layout_marginTop="@dimen/_35pxv"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@{canvasPoemVM.canvasPoemModel.txtOrder}"
                                tools:text="@string/lbl_one" />

                            <TextView
                                android:id="@+id/txtDescription"
                                style="@style/txtHiraginoMinchoProhiraminprow616"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_43pxv"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:letterSpacing="0.08"
                                android:text="@{canvasPoemVM.canvasPoemModel.txtDescription}"
                                tools:text="@string/msg_content_here_co" />

                            <TextView
                                android:id="@+id/txtTimeEN"
                                style="@style/txtHiraginoMinchoProhiraminprow310"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginStart="@dimen/_10pxh"
                                android:layout_marginTop="@dimen/_29pxv"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@{canvasPoemVM.canvasPoemModel.txtTimeEN}"
                                tools:text="@string/lbl_01_05" />

                            <Button
                                android:id="@+id/button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Button" />
                        </LinearLayout>
                    </FrameLayout>

                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameStackcanvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="300px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/canva"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imagePaperOne"
                        android:layout_width="102dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_paper1"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sidebar"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_gravity="center|right"
                    android:layout_weight="3"
                    android:gravity="center|right"
                    android:orientation="vertical"
                    android:translationY="-130dp">

                    <ImageView
                        android:id="@+id/imagePaperTwo"
                        imageRes="@{@drawable/img_paper2}"
                        android:layout_width="@dimen/_87pxh"
                        android:layout_height="@dimen/_59pxh"
                        android:layout_gravity="center|right"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_paper2" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageFilebtn"
                imageRes="@{@drawable/img_filebtn}"
                android:layout_width="@dimen/_91pxh"
                android:layout_height="@dimen/_86pxh"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_127pxv"
                android:layout_marginEnd="-80px"
                android:layout_marginBottom="@dimen/_127pxv"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_filebtn" />

            <ImageView
                android:id="@+id/imageCamerabtn"
                imageRes="@{@drawable/img_camerabtn}"
                android:layout_width="@dimen/_103pxh"
                android:layout_height="@dimen/_87pxh"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_marginEnd="-80px"
                android:layout_marginBottom="@dimen/_24pxv"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_camerabtn" />

            <ImageView
                android:id="@+id/imageScissorsbtn"
                imageRes="@{@drawable/img_scissorsbtn}"
                android:layout_width="@dimen/_122pxh"
                android:layout_height="@dimen/_135pxh"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="-90px"
                android:layout_marginTop="@dimen/_157pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginBottom="@dimen/_157pxv"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_scissorsbtn" />

            <ImageView
                android:id="@+id/imageTrashbtn"
                imageRes="@{@drawable/img_trashbtn}"
                android:layout_width="@dimen/_110pxh"
                android:layout_height="@dimen/_121pxh"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="-90px"
                android:layout_marginTop="@dimen/_55pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginBottom="@dimen/_55pxv"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_trashbtn" />

            <ImageView
                android:id="@+id/imageUp2"
                android:layout_width="@dimen/_39pxh"
                android:layout_height="@dimen/_31pxh"
                android:layout_gravity="bottom|center"
                android:layout_marginStart="@dimen/_102pxh"
                android:layout_marginEnd="@dimen/_102pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_up"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_up" />
        </FrameLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10pxh"
            android:gravity="end"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:id="@+id/linearRowbackbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageBackbtn"
                    android:layout_width="@dimen/_20pxh"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_72pxv"
                    android:layout_marginBottom="@dimen/_13pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_backbtn"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_backbtn" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fl_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_pic_get"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </FrameLayout>

    </FrameLayout>
</layout>
