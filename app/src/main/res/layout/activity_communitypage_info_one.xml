<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="communitypageInfoOneVM" type="com.collagepoem.app.modules.communitypageinfoone.data.viewmodel.CommunitypageInfoOneVM"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearCommunitypagei"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylegray_200">
        <FrameLayout android:id="@+id/frameStackbackbtn"
            android:layout_height="@dimen/_99pxv"
            android:layout_width="match_parent" style="@style/groupStylegray_200">
            <ImageView android:id="@+id/imageBackbtn"
                android:layout_gravity="bottom|start"
                android:layout_height="@dimen/_20pxh"
                android:layout_marginBottom="@dimen/_7pxv"
                android:layout_marginEnd="@dimen/_20pxh"
                android:layout_marginStart="@dimen/_20pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="@dimen/_20pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_backbtn"
                tools:ignore="ContentDescription" tools:src="@drawable/img_backbtn"/>
        </FrameLayout>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearCard"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_23pxh"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylegray_100cornerRadius">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearRowprofilepic"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_28pxh"
                android:layout_marginStart="@dimen/_28pxh"
                android:layout_marginTop="@dimen/_22pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageProfilepic"
                    android:layout_height="@dimen/_44pxh"
                    android:layout_width="@dimen/_44pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_imageprofilepi"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_imageprofilepi"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearColumnusername"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6pxv"
                    android:layout_marginStart="@dimen/_11pxh"
                    android:layout_marginTop="@dimen/_5pxv"
                    android:layout_weight="0.65"
                    android:layout_width="0dp" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtUsername"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{communitypageInfoOneVM.communitypageInfoOneModel.txtUsername}"
                        style="@style/txtArialboldmt14" tools:text="@string/lbl_admin"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtSignature"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{communitypageInfoOneVM.communitypageInfoOneModel.txtSignature}"
                        style="@style/txtArialmt12_1" tools:text="@string/msg_this_is_a_signa"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnFollowed"
                    android:layout_height="@dimen/_21pxv"
                    android:layout_marginBottom="@dimen/_15pxv"
                    android:layout_marginStart="@dimen/_11pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="@dimen/_56pxh"
                    android:paddingBottom="@dimen/_2pxv"
                    android:paddingTop="@dimen/_2pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_followed"
                    android:textAllCaps="false"
                    style="@style/btnRounded" tools:text="@string/lbl_followed"/>
            </LinearLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtContent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_31pxh"
                android:layout_marginStart="@dimen/_31pxh"
                android:layout_marginTop="@dimen/_21pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{communitypageInfoOneVM.communitypageInfoOneModel.txtContent}"
                style="@style/txtArialmt14_1" tools:text="@string/msg_had_something_i"/>
            <ImageView android:gravity="center_horizontal"
                android:id="@+id/imagePoem"
                android:layout_height="@dimen/_202pxh"
                android:layout_marginEnd="@dimen/_28pxh"
                android:layout_marginStart="@dimen/_28pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                imageRes="@{@drawable/img_poem_202x301}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_poem_202x301"/>
            <LinearLayout android:gravity="end"
                android:id="@+id/linearLikebar"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_26pxv"
                android:layout_marginEnd="@dimen/_32pxh"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_25pxv"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageSharebtn"
                    android:layout_height="@dimen/_19pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="@dimen/_18pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_sharebtn"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_sharebtn"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTxtsharecount"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_weight="0.07"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{communitypageInfoOneVM.communitypageInfoOneModel.txtTxtsharecount}"
                    style="@style/txtArialmt12_1" tools:text="@string/lbl_2"/>
                <ImageView android:id="@+id/imageCollectbtn"
                    android:layout_height="@dimen/_21pxh"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_width="@dimen/_21pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_collectbtn"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_collectbtn"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTxtcollectcoun"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_weight="0.15"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{communitypageInfoOneVM.communitypageInfoOneModel.txtTxtcollectcoun}"
                    style="@style/txtArialmt12_1" tools:text="@string/lbl_12"/>
                <ImageView android:id="@+id/imageLikebtn"
                    android:layout_height="@dimen/_19pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_18pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="@dimen/_19pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_likebtn"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_likebtn"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTxtlikecount"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_weight="0.15"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{communitypageInfoOneVM.communitypageInfoOneModel.txtTxtlikecount}"
                    style="@style/txtArialmt12_1" tools:text="@string/lbl_87"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearCommentarea"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_33pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylegray_50_99">
            <LinearLayout android:id="@+id/linearColumnfowardcounter"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_40pxh"
                android:layout_marginStart="@dimen/_40pxh"
                android:layout_marginTop="@dimen/_19pxv"
                android:layout_width="wrap_content" android:orientation="vertical">
                <LinearLayout android:id="@+id/linearRowfowardcounter"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtFowardCounter"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.42"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{communitypageInfoOneVM.communitypageInfoOneModel.txtFowardCounter}"
                        style="@style/txtArialmt14_4" tools:text="@string/lbl_foward_2"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtCommentCounter"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3pxh"
                        android:layout_weight="0.58"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{communitypageInfoOneVM.communitypageInfoOneModel.txtCommentCounter}"
                        style="@style/txtArialmt14_1" tools:text="@string/lbl_comment_35"/>
                </LinearLayout>
                <View android:background="@color/gray_800"
                    android:id="@+id/lineImgselected"
                    android:layout_gravity="end"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginEnd="@dimen/_31pxh"
                    android:layout_marginStart="@dimen/_31pxh"
                    android:layout_marginTop="@dimen/_4pxv" android:layout_width="@dimen/_50pxh"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerComments"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_30pxv"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="2" tools:listitem="@layout/row_comments1"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearNewcommentarea"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_40pxv"
                android:layout_marginEnd="@dimen/_22pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_104pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <EditText
                    android:background="@drawable/rectangle_bg_white_a700_border_gray_700_radius_4"
                    android:ellipsize="end"
                    android:hint="@string/lbl_add_a_comment"
                    android:id="@+id/etAddcomment"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.69"
                    android:layout_width="0dp"
                    android:paddingBottom="@dimen/_14pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_18pxh"
                    android:paddingTop="@dimen/_14pxv"
                    android:singleLine="true"
                    android:text="@={communitypageInfoOneVM.communitypageInfoOneModel.etAddcommentValue}"
                    android:textColorHint="@color/gray_600"
                    style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
                <ImageView android:id="@+id/imageEmojibtn"
                    android:layout_height="@dimen/_30pxh"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginStart="@dimen/_14pxh"
                    android:layout_marginTop="@dimen/_6pxv"
                    android:layout_width="@dimen/_30pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_emojibtn"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_emojibtn"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnSend"
                    android:layout_height="@dimen/_41pxv"
                    android:layout_marginStart="@dimen/_14pxh"
                    android:layout_width="@dimen/_75pxh"
                    android:paddingBottom="@dimen/_13pxv"
                    android:paddingEnd="@dimen/_21pxh"
                    android:paddingStart="@dimen/_20pxh"
                    android:paddingTop="@dimen/_13pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_send"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded_2" tools:text="@string/lbl_send"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
